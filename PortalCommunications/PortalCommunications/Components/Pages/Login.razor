@page "/login"

<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-8">
            <!-- Adjust col size for the title width -->
            <h3 class="fw-bold">Welcome to Portal</h3>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-6">
            <!-- Adjust col size for input width -->
            <form>
                <div class="mb-4">
                    <label for="usernameInput" class="form-label">Enter Username</label>
                    <input type="text" class="form-control" id="usernameInput">
                </div>
                <div class="mb-4">
                    <label for="passwordInput" class="form-label">Enter Password</label>
                    <input type="password" class="form-control" id="passwordInput">
                </div>
                <!-- Adjust col for button width -->
                <button type="submit" class="btn btn-primary small">Submit</button>
            </form>
        </div>
    </div>
</div>

