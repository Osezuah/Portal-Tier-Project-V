@page "/home-page"

<div class="home-container">
    <div class="header">
        <img src="images/portal logo.png" alt="Portal Logo" class="portal-logo">
        <h1>Connect to Your Home</h1>
    </div>

    <button class="ip-address-button">
        <div class="ip-address">
            <img src="images/home icon.png" alt="Home Icon" class="home-icon" />
            <span>127.0.0.1</span>
        </div>
    </button>
</div>

<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    .home-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        height: 100vh;
        padding-top: 20px;
    }

    .header {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 20px;
    }

    .portal-logo {
        width: 150px;
        height: auto;
    }

    .ip-address-button {
        background: none;
        border: none;
        cursor: pointer;
    }

    .ip-address {
        display: flex;
        align-items: center;
        border: 1px solid black;
        padding: 20px;
        font-size: 1.5rem;
        width: 300px;
        justify-content: center;
        border-radius: 10px;
    }

    .home-icon {
        width: 50px;
        height: 50px;
        margin-right: 10px;
    }

    .ip-address-button:hover .ip-address {
        background-color: #f0f0f0;
    }
</style>
